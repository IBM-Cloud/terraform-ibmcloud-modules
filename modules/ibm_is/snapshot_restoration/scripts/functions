function retry {
  local max=$1; shift
  local delay=$1; shift
  local cmd=($@)
  local n=1
  while true; do
    "${cmd[@]}" && break || {
      if [[ $n -lt $max ]]; then
        echo "Command failed. Attempt $n/$max\n"
        ((n++))
        sleep $delay
      else
        echo "The command has failed after $n attempts."
        exit 1
      fi
    }
  done
}
